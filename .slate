config defaultToCurrentScreen true

bind esc:cmd focus 'iTerm'
bind f1:cmd focus 'Sublime Text'
bind f2:cmd focus 'Google Chrome'
bind f3:cmd focus 'Scapple'
bind f4:cmd focus 'Evernote'


alias resizeFullScreen push left bar-resize:screenSizeX
alias resizeTwoThirdsLeft push left bar-resize:2*screenSizeX/3
alias resizeTwoThirdsRight push right bar-resize:2*screenSizeX/3

alias resizeOneThirdLeft push left bar-resize:screenSizeX/3
alias resizeOneThirdRight push right bar-resize:screenSizeX/3
alias resizeOneThirdCenter move screenOriginX+screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY

alias resizeHalfLeft push left bar-resize:screenSizeX/2
alias resizeHalfRight push right bar-resize:screenSizeX/2

alias resizeHalfCenter move screenOriginX+screenSizeX/4;screenOriginY screenSizeX/2;screenSizeY
alias resizeTwoThirdsCenter move screenOriginX+screenSizeX/6;screenOriginY 2*screenSizeX/3;screenSizeY



bind w:ctrl,cmd chain ${resizeFullScreen} | sequence throw next > ${resizeFullScreen}
bind q:ctrl,cmd chain ${resizeTwoThirdsLeft} | sequence throw next > ${resizeTwoThirdsLeft}
bind e:ctrl,cmd chain ${resizeTwoThirdsRight} | sequence throw next > ${resizeTwoThirdsRight}

bind q:ctrl,shift chain ${resizeOneThirdLeft} | sequence throw next > ${resizeOneThirdLeft}
bind e:ctrl,shift chain ${resizeOneThirdRight} | sequence throw next > ${resizeOneThirdRight}
bind w:ctrl,shift chain ${resizeOneThirdCenter} | sequence throw next > ${resizeOneThirdCenter}

bind q:ctrl,alt chain ${resizeHalfLeft} | sequence throw next > ${resizeHalfLeft}
bind e:ctrl,alt chain ${resizeHalfRight} | sequence throw next > ${resizeHalfRight}

bind s:ctrl,shift chain ${resizeHalfCenter} | sequence throw next > ${resizeHalfCenter}
bind s:ctrl,shift,cmd chain ${resizeTwoThirdsCenter} | sequence throw next > ${resizeTwoThirdsCenter}
